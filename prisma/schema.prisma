generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Products {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  name    String
  price   Int
  image   String
  description String?
  category String?
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email    String @unique
  password String

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
